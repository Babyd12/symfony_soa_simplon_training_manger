{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Full_name</th>
                <td>{{ user.fullName }}</td>
            </tr>
            <tr>
                <th>Level_of_study</th>
